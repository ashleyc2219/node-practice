      <script src="/joi/joi-browser.min.js"></script>
      <script>
        function checkForm() {
          const fd = new FormData(document.form1);
  
          const dataObj = {};
          for (const i of fd) {
            dataObj[i[0]] = i[1];
          }

          fetch('', {
            method: 'POST',
            body: JSON.stringify(dataObj),
            headers: {
              'Content-Type': 'application/json'
            }
          }).then(r => r.json())
            .then(obj => {
              console.log(obj);
              if (!obj.success) {
                alert('資料沒有變更')
              }
            });


        }
